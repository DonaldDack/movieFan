<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="dmproject.moviebuff.TaskActivity"
    android:id="@+id/mainLayout">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:text="Points: "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/tvPoints"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PointsForLevel: "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/tvPointsForLevel"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="3">

        <ImageView
            android:id="@+id/image1"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1">
        </ImageView>

        <ImageView
            android:id="@+id/image2"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1">
        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="3">


        <ImageView
            android:id="@+id/image3"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1">
        </ImageView>

        <ImageView
            android:id="@+id/image4"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1">
        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tvAnswer"
        android:text="введите ответ"
        android:gravity="center_horizontal"
        android:textSize="35dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="4">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:onClick="btnWordsListener"
            android:id="@+id/btn1"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:onClick="btnWordsListener"
            android:id="@+id/btn2"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:onClick="btnWordsListener"
            android:id="@+id/btn3"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:onClick="btnWordsListener"
            android:id="@+id/btn4"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:onClick="btnWordsListener"
            android:id="@+id/btn5"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:onClick="btnWordsListener"
            android:id="@+id/btn6"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="4">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:onClick="btnWordsListener"
            android:id="@+id/btn7"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:onClick="btnWordsListener"
            android:id="@+id/btn8"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:onClick="btnWordsListener"
            android:id="@+id/btn9"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:onClick="btnWordsListener"
            android:id="@+id/btn10"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:onClick="btnWordsListener"
            android:id="@+id/btn11"
            android:layout_weight="1"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="DEL"
            android:onClick="btnDelListener"
            android:id="@+id/btnDel"
            android:layout_weight="1" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="4">


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:onClick="btnWordsListener"
                android:id="@+id/btn13"
                android:layout_weight="1"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:onClick="btnWordsListener"
                android:id="@+id/btn14"
                android:layout_weight="1"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:onClick="btnWordsListener"
                android:id="@+id/btn15"
                android:layout_weight="1"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:onClick="btnWordsListener"
                android:id="@+id/btn16"
                android:layout_weight="1"/>
            

        </LinearLayout>

</LinearLayout>
</LinearLayout>