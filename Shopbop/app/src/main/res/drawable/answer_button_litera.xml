<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
    <corners
        android:radius="16dp"
        />
    <gradient
        android:gradientRadius="100"
        android:centerX="35%"
        android:centerY="50%"
        android:startColor="#E8401E"
        android:endColor="#FF2E2E"
        android:type="radial"
        />
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"
        />
    <size
        android:width="50dp"
        android:height="50dp"
        />
    <stroke
        android:width="3dp"
        android:color="#875E5E"
        />
</shape>